<h2 style="margin: 0 0 16px 0; font-size: 20px; color: #1e3a5f;">Alert Notification</h2>

<p style="margin: 0 0 16px 0;">
    Hi {{ RecipientName }},
</p>

<p style="margin: 0 0 24px 0;">
    An alert has been triggered that requires your attention.
</p>

<!-- Alert Details -->
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="background-color: #f8f9fa; border-radius: 6px; margin-bottom: 24px;">
    <tr>
        <td style="padding: 20px;">
            <!-- Title and Severity -->
            <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="margin-bottom: 16px;">
                <tr>
                    <td>
                        <h3 style="margin: 0 0 8px 0; font-size: 18px; color: #333333;">{{ Title }}</h3>
                        {% case Severity %}
                            {% when 'Critical' or 'Sev0' %}
                                <span class="severity-badge badge-critical">{{ Severity }}</span>
                            {% when 'Error' or 'Sev1' %}
                                <span class="severity-badge badge-error">{{ Severity }}</span>
                            {% when 'Warning' or 'Sev2' %}
                                <span class="severity-badge badge-warning">{{ Severity }}</span>
                            {% when 'Informational' or 'Sev3' %}
                                <span class="severity-badge badge-informational">{{ Severity }}</span>
                            {% else %}
                                <span class="severity-badge badge-verbose">{{ Severity }}</span>
                        {% endcase %}
                    </td>
                </tr>
            </table>

            <!-- Details Table -->
            <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
                <tr>
                    <td style="padding: 8px 0; border-bottom: 1px solid #e9ecef;">
                        <strong style="color: #6c757d; display: inline-block; width: 120px;">Resource:</strong>
                        <span style="color: #333333;">{{ ResourceName }}</span>
                    </td>
                </tr>
                <tr>
                    <td style="padding: 8px 0; border-bottom: 1px solid #e9ecef;">
                        <strong style="color: #6c757d; display: inline-block; width: 120px;">Alert Type:</strong>
                        <span style="color: #333333;">{{ AlertType }}</span>
                    </td>
                </tr>
                <tr>
                    <td style="padding: 8px 0; border-bottom: 1px solid #e9ecef;">
                        <strong style="color: #6c757d; display: inline-block; width: 120px;">Customer:</strong>
                        <span style="color: #333333;">{{ CustomerName }}</span>
                    </td>
                </tr>
                <tr>
                    <td style="padding: 8px 0; border-bottom: 1px solid #e9ecef;">
                        <strong style="color: #6c757d; display: inline-block; width: 120px;">Subscription:</strong>
                        <span style="color: #333333;">{{ SubscriptionName }}</span>
                    </td>
                </tr>
                <tr>
                    <td style="padding: 8px 0;">
                        <strong style="color: #6c757d; display: inline-block; width: 120px;">Time:</strong>
                        <span style="color: #333333;">{{ Timestamp | date: '%Y-%m-%d %H:%M:%S' }} UTC</span>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>

<!-- Description -->
{% if Description and Description != '' %}
<div style="margin-bottom: 24px;">
    <h4 style="margin: 0 0 8px 0; font-size: 14px; color: #6c757d; text-transform: uppercase; letter-spacing: 0.5px;">Details</h4>
    <p style="margin: 0; padding: 16px; background-color: #ffffff; border: 1px solid #e9ecef; border-radius: 6px; color: #333333;">
        {{ Description }}
    </p>
</div>
{% endif %}

<!-- CTA Button -->
{% if PortalUrl and PortalUrl != '' %}
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
    <tr>
        <td align="center">
            <a href="{{ PortalUrl }}" class="btn" style="display: inline-block; padding: 12px 24px; background-color: #1e3a5f; color: #ffffff; text-decoration: none; border-radius: 6px; font-weight: 600; font-size: 14px;">
                View Alert in Helios
            </a>
        </td>
    </tr>
</table>
{% endif %}
