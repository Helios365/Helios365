@page
@model Helios365.Platform.Pages.IndexModel
@{
    Layout = "Shared/_Layout";
    ViewData["Title"] = "Dashboard";
}

<!-- Dashboard Header -->
<div class="dashboard-hero">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-5 fw-bold text-white mb-2">
                    <i class="bi bi-speedometer2 me-3"></i>Dashboard
                </h1>
                <p class="lead text-white-50 mb-0">
                    Real-time monitoring and automated incident response
                </p>
            </div>
            <div class="col-md-4 text-md-end">
                <div class="d-flex flex-column flex-md-row gap-2 justify-content-md-end">
                    <button class="btn btn-outline-light btn-sm" data-auto-refresh="30">
                        <i class="bi bi-arrow-clockwise me-1"></i>Auto-refresh: 30s
                    </button>
                    <div class="text-white-50 small">
                        Last updated: <span id="lastUpdated">@DateTime.Now.ToString("HH:mm:ss")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid px-4">
    <!-- Statistics Cards -->
    <partial name="_StatsCards" model="Model" />

    <!-- Recent Alerts Table -->
    <div class="mb-4">
        <partial name="_RecentAlerts" model="Model" />
    </div>

    <!-- Quick Stats and Performance -->
    <partial name="_QuickStats" model="Model" />
</div>

@section Scripts {
    <script>
        // Update last updated time
        function updateLastUpdatedTime() {
            document.getElementById('lastUpdated').textContent = new Date().toLocaleTimeString();
        }
        
        // Call every minute
        setInterval(updateLastUpdatedTime, 60000);
        
        // Page-specific dashboard enhancements
        document.addEventListener('DOMContentLoaded', function() {
            // Add loading states to refresh buttons
            document.querySelectorAll('[onclick*="location.reload"]').forEach(btn => {
                btn.addEventListener('click', function() {
                    showLoading(this);
                });
            });
        });
    </script>
}
