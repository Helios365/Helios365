@model Helios365.Platform.Pages.IndexModel

<!-- Stats Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card stat-card border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="display-4 text-primary mb-2">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@Model.ActiveAlertsCount
                </div>
                <h6 class="text-muted mb-0">Active Alerts</h6>
                <small class="text-muted">Requiring attention</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="display-4 text-success mb-2">
                    <i class="bi bi-check-circle-fill me-2"></i>@Model.ResolvedTodayCount
                </div>
                <h6 class="text-muted mb-0">Resolved Today</h6>
                <small class="text-muted">Automatically fixed</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="display-4 text-warning mb-2">
                    <i class="bi bi-arrow-up-circle-fill me-2"></i>@Model.EscalatedCount
                </div>
                <h6 class="text-muted mb-0">Escalated</h6>
                <small class="text-muted">Manual intervention</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="display-4 text-info mb-2">
                    <i class="bi bi-people-fill me-2"></i>@Model.CustomersCount
                </div>
                <h6 class="text-muted mb-0">Customers</h6>
                <small class="text-muted">Active tenants</small>
            </div>
        </div>
    </div>
</div>