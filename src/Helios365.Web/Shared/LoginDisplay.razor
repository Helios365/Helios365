<AuthorizeView>
    <Authorized>
        <MudMenu AnchorOrigin="Origin.BottomRight" TransformOrigin="Origin.TopRight">
            <ActivatorContent>
                <MudButton Variant="Variant.Outlined"
                           Color="Color.Inherit"
                           Size="Size.Small"
                           EndIcon="@Icons.Material.Filled.ArrowDropDown"
                           Style="text-transform: none;">
                    <MudIcon Icon="@Icons.Material.Filled.Person" Class="me-1" Size="Size.Small" />
                    @context.User.Identity?.Name
                </MudButton>
            </ActivatorContent>
            <ChildContent>
                <MudMenuItem Href="/profile" Icon="@Icons.Material.Filled.Person" label="Profile" />
                <MudMenuItem Href="/Privacy" Icon="@Icons.Material.Filled.PrivacyTip" label="Privacy" />
                <MudDivider />
                <MudMenuItem Href="MicrosoftIdentity/Account/SignOut" Icon="@Icons.Material.Filled.Logout" label="Sign out" />
            </ChildContent>
        </MudMenu>
    </Authorized>
    <NotAuthorized>
        <MudButton Variant="Variant.Outlined"
                   Color="Color.Inherit"
                   Size="Size.Small"
                   Href="MicrosoftIdentity/Account/SignIn"
                   StartIcon="@Icons.Material.Filled.Login">
            Sign in
        </MudButton>
    </NotAuthorized>
</AuthorizeView>
