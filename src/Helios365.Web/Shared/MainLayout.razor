@inherits LayoutComponentBase
@using Helios365.Core.Models
@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>Helios365</PageTitle>

<div class="main-container">
    <!-- Header -->
    <header class="header-gradient text-white">
        <div class="container">
            <!-- Top navigation bar -->
            <div class="d-flex justify-content-between align-items-center py-3">
                <div class="d-flex align-items-center">
                    <img src="logo.png" alt="Helios365" class="me-2" style="height:32px;" />
                    <span class="h4 mb-0 fw-bold">Helios365</span>
                </div>

                <!-- Desktop navigation -->
                <div class="d-none d-lg-flex align-items-center">
                    <nav class="navbar-nav d-flex flex-row me-4">
                        <NavLink class="nav-link me-3" href="/" Match="NavLinkMatch.All">
                            <i class="bi bi-speedometer2 me-1"></i>Dashboard
                        </NavLink>
                        <NavLink class="nav-link me-3" href="/alerts">
                            <i class="bi bi-exclamation-triangle me-1"></i>Alerts
                        </NavLink>
                        <NavLink class="nav-link me-3" href="/customers">
                            <i class="bi bi-people me-1"></i>Customers
                        </NavLink>
                        <NavLink class="nav-link" href="/resources">
                            <i class="bi bi-server me-1"></i>Resources
                        </NavLink>
                        <NavLink class="nav-link" href="/oncall">
                            <i class="bi bi-telephone-inbound me-1"></i>On-Call
                        </NavLink>
                    </nav>
                    <LoginDisplay />
                </div>

                <!-- Mobile menu toggle -->
                <div class="d-lg-none">
                    <button class="btn btn-outline-light" type="button" data-bs-toggle="collapse" data-bs-target="#mobileNav">
                        <i class="bi bi-list"></i>
                    </button>
                </div>
            </div>

            <!-- Mobile navigation (collapsible) -->
            <div class="collapse d-lg-none mb-3" id="mobileNav">
                <div class="border-top border-white border-opacity-25 pt-3">
                    <div class="row">
                        <div class="col-6 col-sm-3 mb-2">
                            <NavLink class="nav-link text-white-50 p-2 rounded" href="/" Match="NavLinkMatch.All">
                                <i class="bi bi-speedometer2 d-block text-center mb-1" style="font-size: 1.5rem;"></i>
                                <small class="d-block text-center">Dashboard</small>
                            </NavLink>
                        </div>
                        <div class="col-6 col-sm-3 mb-2">
                            <NavLink class="nav-link text-white-50 p-2 rounded" href="/alerts">
                                <i class="bi bi-exclamation-triangle d-block text-center mb-1" style="font-size: 1.5rem;"></i>
                                <small class="d-block text-center">Alerts</small>
                            </NavLink>
                        </div>
                        <div class="col-6 col-sm-3 mb-2">
                            <NavLink class="nav-link text-white-50 p-2 rounded" href="/customers">
                                <i class="bi bi-people d-block text-center mb-1" style="font-size: 1.5rem;"></i>
                                <small class="d-block text-center">Customers</small>
                            </NavLink>
                        </div>
                        <div class="col-6 col-sm-3 mb-2">
                            <NavLink class="nav-link text-white-50 p-2 rounded" href="/resources">
                                <i class="bi bi-server d-block text-center mb-1" style="font-size: 1.5rem;"></i>
                                <small class="d-block text-center">Resources</small>
                            </NavLink>
                        </div>
                        <div class="col-6 col-sm-3 mb-2">
                            <NavLink class="nav-link text-white-50 p-2 rounded" href="/oncall">
                                <i class="bi bi-telephone-inbound d-block text-center mb-1" style="font-size: 1.5rem;"></i>
                                <small class="d-block text-center">On-Call</small>
                            </NavLink>
                        </div>
                    </div>
                    <div class="text-center mt-2">
                        <LoginDisplay />
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="content-area">
        <div class="container">
            @Body
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="d-flex align-items-center mb-2">
                        <img src="logo.png" alt="Helios365" class="me-2" style="height:20px;" />
                        <strong>Helios365</strong>
                    </div>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="text-muted small mb-1">© @DateTime.Now.Year Helios365. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>
</div>
